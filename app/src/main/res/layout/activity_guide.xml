<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_closed.GuideActivity">
    <com.zhengsr.viewpagerlib.view.GlideViewPager
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.zhengsr.viewpagerlib.view.GlideViewPager>
    <com.zhengsr.viewpagerlib.indicator.ZoomIndicator
        android:id="@+id/indictor"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        app:zoom_selector="@drawable/page_bottom_circle"
        app:zoom_leftmargin="10dp"
        app:zoom_max="1.5"
        app:zoom_alpha_min="0.4"
        app:zoom_dismiss_open="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">
    </com.zhengsr.viewpagerlib.indicator.ZoomIndicator>

        <Button
            android:id="@+id/jump"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginBottom="85dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="进入应用"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone"
            />

</RelativeLayout>