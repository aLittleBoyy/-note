<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:clipToPadding="false"

    >



    <LinearLayout
        android:id="@+id/look"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/image_look"
            android:layout_width="23dp"
            android:layout_gravity="center"
            android:layout_height="23dp"
            android:src="@mipmap/looknormal"
            android:layout_marginTop="7dp"

            />
        <TextView
            android:id="@+id/text_look"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:text="看天下"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        >
        <ImageView
            android:id="@+id/image_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/plus"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/text_plus"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:text="发布"

            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_message"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:src="@mipmap/messagenormal"

            />
        <TextView
            android:id="@+id/text_message"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:text="消息"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_my"
            android:layout_width="23dp"
            android:layout_gravity="center"
            android:layout_height="23dp"
            android:src="@mipmap/mynormal"
            android:layout_marginTop="7dp"

            />
        <TextView
            android:id="@+id/text_my"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:layout_marginBottom="4dp"
            android:text="我"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>